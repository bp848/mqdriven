{
  "installCommand": "npm ci",
  "buildCommand": "VITE_GEMINI_API_KEY=$VITE_GEMINI_API_KEY VITE_SUPABASE_URL=$VITE_SUPABASE_URL VITE_SUPABASE_ANON_KEY=$VITE_SUPABASE_ANON_KEY npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/auth/callback(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/((?!assets/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate, max-age=0" },
        { "key": "Pragma", "value": "no-cache" },
        { "key": "Expires", "value": "0" },
        { "key": "X-Cache-Buster", "value": "v2.1.1-20251107-2318" }
      ]
    }
  ]
}
